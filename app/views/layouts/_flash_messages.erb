<% if flash[:notice] %>
  <div class="notice flash">
    <p><%= flash[:notice] %></p>
    <%= link_to_function '[hide]', "$(this).parents('.flash').fadeOut('fast')" %>
    &nbsp; <%# needed for some reason... %>
  </div>
<% end %>
<% if flash[:error] %>
  <div class="error flash">
    <p><%= flash[:error] %></p>
    <%= link_to_function '[hide]', "$(this).parents('.flash').fadeOut('fast')" %>
    &nbsp; <%# needed for some reason... %>
  </div>
<% end %>


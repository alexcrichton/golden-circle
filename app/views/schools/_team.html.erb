<div class="team">
  <%- if team.is_exhibition -%>
    <hr />
  <%- end -%>
  <%= f.hidden_field :is_exhibition %>
  <p>
    <%= f.label :level, 'Team level:' %>
    <%- if team.is_exhibition -%>
      <%= f.select :level, [Team::APPRENTICE, Team::WIZARD] %>
    <%- else -%>
      <%= team.level %>
      <%= f.hidden_field :level %>
    <%- end -%>
    <%- if team.is_exhibition -%>
      <%= f.remove_link '[Remove this team]', :class => 'controls' %>
    <%- end -%>
  </p>
  <%- if team.is_exhibition && !team.new_record? -%>
    <p><label>Team ID Number:</label> <%= team.id %></p>
  <%- end -%>
  <%- students = team.students.by_name -%>
  <%= small_errors(students) %>
  <table id="team<%= team.id %>" class="noborder">
    <caption>
      Students (<%= students.size %>/15)
    </caption>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>&nbsp;</th>
    </tr>
    <%= f.render_associated_form(students, :new => (students.size >= 15 ? 0 : 1)) %>
  </table>
  <%= f.add_associated_link('add', students.build, :container => "#team#{team.id}") %>
</div>

<div class="team">
  <p>
    <%= f.label :level, 'Team level:' %> <%= team.level %>
  </p>
  <%= f.hidden_field :level %>
  <%= small_errors(team.students) %>
  <table id="<%= team.level.downcase.pluralize %>" class="noborder">
    <caption>
      Students (<%= team.students.size %>/<%= Settings.max_students_on_team %>)
    </caption>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>&nbsp;</th>
    </tr>
    <%= f.render_associated_form(team.students, :new => (team.students.size >= Settings.max_students_on_team ? 0 : 1)) %>
  </table>
  <%= f.add_associated_link('add', team.students.build, :container => "##{team.level.downcase.pluralize}") %>
</div>

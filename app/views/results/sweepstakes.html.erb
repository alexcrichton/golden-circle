<%- content_for :sidebar do -%>
  <%= render :partial => 'sidebar' %>
<%- end -%>
<h1>Awards</h1>
<hr />
<h3>Sweepstakes Results</h3>
<%- [:large, :small].each do |klass| -%>
  <div class="span-7 <%= klass == :large ? 'colborder' : 'last' %>">
    <table>
      <tr>
        <td colspan="3" class="separator"><%= klass.to_s.capitalize %> Schools</td>
      </tr>
      <tr>
        <th>School</th>
        <th>Score</th>
      </tr>
      <%- @schools.send(klass).each do |school| -%>
        <tr class="<%= cycle('even', 'odd') %>">
          <td><%= h school.name %></td>
          <td><%= school.school_score %></td>
        </tr>
      <%- end -%>
    </table>
  </div>
<%- end -%>
<%- [:wizard, :apprentice].each do |level| -%>
  <hr />
  <h3><%= level.to_s.capitalize %> Team Results</h3>
  <%- [:large, :small].each do |klass| -%>
    <div class="span-7 <%= klass == :large ? 'colborder' : 'last' %>">
      <table>
        <tr>
          <td colspan="3" class="separator"><%= klass.to_s.capitalize %> Schools</td>
        </tr>
        <tr>
          <th>School</th>
          <th>Score</th>
        </tr>
        <%- @schools.send(klass).winners.each do |school| -%>
          <tr class="<%= cycle('even', 'odd') %>">
            <td><%= h school.name %></td>
            <td><%= school.teams.send(level).first.team_score %></td>
          </tr>
        <%- end -%>
      </table>
    </div>
  <%- end -%>
<%- end -%>

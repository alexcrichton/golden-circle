<div class="span-8 colborder">
  <h1>Blank</h1>

  <p>
    Those teams and students which haven't had scores entered yet. These might need to be entered in to have the correct
    results...
  </p>
  <% if @blank_teams.size > 0 %>
    <h3>Teams</h3>
    <ul>
      <% @blank_teams.each do |team| %>
        <li><%= link_to team_name(team), grading_team_path(team.level) %> (<%= team.level %>)</li>
      <% end %>
    </ul>
    <hr />
  <% end %>
  <% if @blank_students.size > 0 %>
    <h3>Students</h3>
    <ul>
      <% @blank_students.each do |student| %>
        <li><%= link_to(h(student.name), grading_team_students_path(student.team)) %></li>
      <% end %>
    </ul>
  <% end %>
</div>
<div class="span-7 last">
  <h1>Unchecked</h1>

  <p>
    The teams and students which haven't had their scores checked yet. This is slightly important...
  </p>

  <% if @unchecked_team_scores.size > 0 %>
    <h3>Teams</h3>
    <ul>
      <% @unchecked_team_scores.each do |team| %>
        <li><%= link_to team_name(team), grading_team_path(team.level) %> (<%= team.level %>)</li>
      <% end %>
    </ul>
    <hr />
  <% end %>
  <% if @unchecked_student_scores.size > 0 %>
    <h3>Students</h3>
    <ul>
      <% @unchecked_student_scores.each do |team| %>
        <li><%= link_to team_name(team), grading_team_students_path(team) %> (<%= team.level %>)</li>
      <% end %>
    </ul>
  <% end %>
</div>

<h1>Grading Students</h1>

<% form_tag(grading_students_path, :method => :put) do %>
<table border=1>
  <%= error_messages_for(:object => @students) %>
  <% [:small_app, :small_wiz, :large_app, :large_wiz].each do |thing| %>
    <tr><td class="separator" colspan=2><%= thing %></td></tr>
    <tr>
      <th>Name</th>
      <th>Test Score</th>
    </tr>
    <% for student in instance_variable_get("@#{thing}") %>
      <% fields_for("students[#{student.id}]", student) do |sf| %>
        <tr>
          <td><%= sf.label :test_score, student.first_name + " " + student.last_name %></td>
          <td><%= sf.text_field :test_score %></td>
        </tr>
      <% end %>
    <% end %>
  <% end %>
</table>
  <%= submit_tag "Submit Changes" %>
<% end %>

<h1><%= @sort[:class] %> Schools - <%= @sort[:level] %> Division</h1>

<table border=1>
  <tr><td colspan=5 class="separator"><%= @sort[:class] %> School Sweepstakes</td></tr>
  <tr>
    <th>Rank</th>
    <th>Name</th>
    <th>Apprentice Score</th>
    <th>Wizard Score</th>
    <th>Sweepstakes Score</th>
  </tr>
  <%= render :partial => 'school_stat', :collection => @schools %>
  <tr><td colspan=5 class="separator"><%= @sort[:class] %> School <%= @sort[:level] %> Team Results</td></tr>
  <tr>
    <th>Rank</th>
    <th>School Name</th>
    <th>Student Score Sum</th>
    <th>Test Score</th>
    <th>Total Score</th>
  </tr>
  <%= render :partial => 'team_stat', :collection => @teams %>
  <tr><td colspan=5 class="separator"><%= @sort[:class] %> School Individual <%= @sort[:level] %> Results</td></tr>
  <tr>
    <th>Rank</th>
    <th>Name</th>
    <th colspan=2>School</th>
    <th>Score</th>
  </tr>
  <%= render :partial => 'student_stat', :collection => @students %>
</table>

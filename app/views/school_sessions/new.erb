<% content_for :sidebar do %>
  <%= render 'schools/sidebar' %>
<% end %>
<div class="colborder login">
  <h2>Login School</h2>
  <% form_for @school_session, :url => school_session_path do |f| %>
    <%= f.error_messages %>
    <div id="login_container" <%= 'style="display:none"' if @school_session.authenticating_with_openid? %>>
      <p>
        <%= f.label :email %>
        (or <%= link_to_function 'OpenID', "$('login_container').toggle();$('openid_container').toggle()" %>)
        <%= f.text_field :email, :size => 25 %>
      </p>
      <p>
        <%= f.label :password %> (<%= link_to "Forgot password?", new_password_reset_path %>)
        <%= f.password_field :password, :size => 25 %>
      </p>
    </div>
    <div id="openid_container" <%= 'style="display:none"' unless @school_session.authenticating_with_openid? %>>
      <p>
        <%= f.label :openid_identifier, 'OpenID' %>
        (or <%= link_to_function 'email/password', "$('login_container').toggle();$('openid_container').toggle()" %>)
        <%= f.text_field :openid_identifier, :size => 25 %>
      </p>
    </div>
    <p>
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %><br />
      <%= f.submit "Login" %>
    </p>
  <% end %>
</div>

<div class="login">
  <h2>Register a School</h2>
  <% form_for :school, :url => schools_path, :html => {:method => :post} do |f| %>
    <%= render 'schools/form', :f => f %>
    <p>
      <%= f.submit "Register School" %>
    </p>
  <% end %>
</div>


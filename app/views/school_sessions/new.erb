<%= error_messages_for :school_session %>
<% content_for :jsload do %>
  $('#<%= @school_session.openid_identifier.blank? ? 'openid-login' : 'pass-login' %>').hide();
  $('.inner').corner("round 8px").parent().css('padding', '2px').corner("round 10px");
<% end %>
<div class="login outer">
  <div class="inner">
    <h2>Login School</h2>
    <% form_for @school_session, :url => school_session_path do |f| %>
      <div id="pass-login">
        <p>
          <%= f.label :email %>
          (or <%= link_to_function 'OpenID', "$('#pass-login').slideUp();$('#openid-login').slideDown()" %>)<br/>
          <%= f.text_field :email, :size => 40, :tabindex => 1 %>
        </p>

        <p>
          <%= f.label :password %> (<%= link_to "Forgot password?", new_password_reset_path %>)<br/>
          <%= f.password_field :password, :size => 40, :tabindex => 2 %>
        </p>
      </div>
      <div id="openid-login">
        <p>
          <%= f.label :openid_identifier, 'OpenID' %>
          (or <%= link_to_function 'email/password', "$('#openid-login').slideUp();$('#pass-login').slideDown()" %>)
          <%= f.text_field :openid_identifier, :size => 40, :tabindex => 3 %>
        </p>
      </div>
      <div>
        <%= f.check_box :remember_me, :tabindex => 4 %>
        <%= f.label :remember_me %>
        <div class="tcenter">
          <%= f.submit "Login", :tabindex => 5, :onclick => "$('#pass-login:hidden').find('input').attr('value', '');" +
            "$('#openid-login:hidden').find('input').attr('value', '')" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
<br/>
<div class="login outer">
  <div class="inner">
    <h2>Register a School</h2>
    <% form_for :school, :url => schools_path, :html => {:method => :post} do |f| %>
      <%= render 'schools/form', :f => f %>
      <p class="tcenter">
        <%= f.submit "Register School" %>
      </p>
    <% end %>
  </div>
</div>
